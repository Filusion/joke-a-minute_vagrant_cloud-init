Vagrant.configure("2") do |config|
  # Use Ubuntu 22.04 LTS
  config.vm.box = "ubuntu/jammy64"
  
  # Set hostname
  config.vm.hostname = "joke-app-vm"
  
  # Sync the entire project folder
  config.vm.synced_folder "../..", "/project"
  
  # Forward ports ONLY to localhost (not 0.0.0.0)
  # This way HOST nginx can proxy to localhost:8080
  config.vm.network "forwarded_port", guest: 80, host: 8080, host_ip: "127.0.0.1"
  config.vm.network "forwarded_port", guest: 443, host: 8443, host_ip: "127.0.0.1"
  config.vm.network "forwarded_port", guest: 5000, host: 5000, host_ip: "127.0.0.1"
  config.vm.network "forwarded_port", guest: 6080, host: 6080, host_ip: "127.0.0.1"
  
  # VirtualBox provider settings
  config.vm.provider "virtualbox" do |vb|
    vb.name = "joke-app-vm"
    vb.memory = "2048"  # 2GB is enough
    vb.cpus = 2
  end
  
  # Provision with shell script
  config.vm.provision "shell", path: "provision.sh"
end